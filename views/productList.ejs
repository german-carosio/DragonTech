<!DOCTYPE html>
<html lang="en">

    <!--Head-->
    <%- include ("./partials/head")  %> 

    <body>
        
    <!--Header-->    
    <%- include ("./partials/header")  %>


    <main>

        <section class="categorias">

            <h2>categorias</h2>

            <ul>
                <li><a href="/categorias">Headset</a></li>
                <li><a href="/categorias">Mouse</a></li>
                <li><a href="/categorias">Teclado</a></li>
            </ul>

        </section>

        <section class="productList">

            <h2>Lista de productos</h2>

            <% productos.forEach(element => { %>
             
                <article class="productList__product">
                    
                    <a href="/productDetail/<%= element.id %> ">
                        <img src="/img/<%= element.img  %>.jpg" alt="">
                    </a>

                    <a href="/productDetail/<%= element.id %> ">
                        <h3><%= element.nombre  %> </h3>
                    </a>

                    <p><%= element.precio  %> </p>

                    <div>
                        <button class="buttom-carrito" type="submit">AGREGAR AL CARRITO</button>
                        <button class="buttom-carrito" type="submit">COMPRAR</button>   
                    </div>
                
                </article>

            <% }) %>
            
         
        </section>
    </main>

    <!--Footer-->
    <%- include ("./partials/footer")  %> 
    
</body>
</html>